pipeline {
    agent any
    tools{
    maven 'maven'
    }

    stages {
        
        stage('build') {
            steps {
                sh 'mvn package'
            }
        }
        stage('test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('deploy-tomcat') {
            steps {
                sshagent(['tomcat8']) {
                   sh 'scp -o StrictHostKeyChecking=no target/*.war ec2-user@54.145.169.213:/apache-tomcat-8.5.90/webapps' 
                }
            }
        }
        
    }
}        
