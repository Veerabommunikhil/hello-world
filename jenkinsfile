pipeline {
    agent any
    tools{
    maven 'maven'
    }

    stages {
        stage('clone') {
            steps {
                sudo git clone https://github.com/Veerabommunikhil/hello-world.git
            }
        }
        stage('build') {
            steps {
                sh 'mvn package'
            }
        }
        stage('test') {
            steps {
                sh 'mvn test'
            }
        }
    }
}        
